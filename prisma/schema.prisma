generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Production schema (Supabase PostgreSQL) - Source of Truth
// This Prisma schema matches the production/staging Supabase database

model User {
  id            String         @id @default(cuid())
  name          String         // NOT NULL in production
  email         String         @unique // UNIQUE, NOT NULL in production
  weeklytarget  Int            @default(5) @map("weeklytarget") // NOT NULL, DEFAULT 5
  usualsitlength Int           @default(30) @map("usualsitlength") // NOT NULL, DEFAULT 30
  image         String?        @default("/icons/meditation-1.svg") @map("image") // Has default in production
  invitecode    String         @map("invitecode") // NOT NULL in production, NOT UNIQUE (duplicates allowed)
  pairingstatus String         @default("not_started") @map("pairing_status") // NOT NULL, DEFAULT 'not_started'
  createdat     DateTime       @default(now()) @map("createdat")
  // Relations
  partnershipsAsUser1 Partnership[] @relation("User1Partnerships")
  partnershipsAsUser2 Partnership[] @relation("User2Partnerships")
  sessions            Session[]

  @@map("users")
}

model Partnership {
  id        String   @id @default(cuid())
  userid    String   @map("userid") // NOT NULL, references users(id)
  partnerid String   @map("partnerid") // NOT NULL, references users(id)
  score     Int      @default(0) @map("score") // DEFAULT 0
  createdat DateTime @default(now()) @map("createdat")
  // Relations
  user1     User     @relation("User1Partnerships", fields: [userid], references: [id])
  user2     User     @relation("User2Partnerships", fields: [partnerid], references: [id])
  sessions  Session[]
  weeks     Week[]

  @@unique([userid, partnerid])
  @@map("partnerships")
}

model Week {
  id            String      @id @default(cuid())
  partnershipid String      @map("partnershipid") // NOT NULL, references partnerships(id)
  weeknumber    Int         @map("weeknumber") // NOT NULL
  weekstart     DateTime    @map("weekstart") // NOT NULL
  weekend       DateTime    @map("weekend") // NOT NULL
  inviteesits   Int         @default(0) @map("inviteesits") // DEFAULT 0 - The user who used the invite code (was user1sits)
  invitersits   Int         @default(0) @map("invitersits") // DEFAULT 0 - The user who created account and shared invite code (was user2sits)
  weeklygoal    Int         @map("weeklygoal") // NOT NULL
  goalmet       Boolean     @default(false) @map("goalmet") // DEFAULT FALSE
  createdat     DateTime    @default(now()) @map("createdat")
  // Relations
  partnership  Partnership @relation(fields: [partnershipid], references: [id])
  sessions     Session[]

  @@map("weeks")
}

model Session {
  id            String       @id @default(cuid())
  createdat     DateTime     @default(now()) @map("createdat")
  sitlength     Int          @map("sitlength") // NOT NULL - Session length in seconds
  iscompleted   Boolean      @default(false) @map("iscompleted") // DEFAULT FALSE
  completedat   DateTime?    @map("completedat") // Nullable - set when session completes
  startedat     DateTime?    @map("startedat") // Nullable
  userid        String       @map("userid") // NOT NULL, references users(id)
  partnershipid String?      @map("partnershipid") // Nullable, references partnerships(id)
  weekid        String?      @map("weekid") // Nullable, references weeks(id) - Link session to week
  // Relations
  partnership   Partnership? @relation(fields: [partnershipid], references: [id])
  user          User         @relation(fields: [userid], references: [id])
  week          Week?        @relation(fields: [weekid], references: [id])

  @@map("sessions")
}

